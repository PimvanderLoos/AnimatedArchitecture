<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>nl.pim16aap2.BigDoors</groupId>
    <artifactId>BigDoors-parent</artifactId>
    <packaging>pom</packaging>
    <version>0.1.8.40-ALPHA</version>

    <modules>
        <module>core</module>
        <module>nms</module>
        <module>hooks</module>
    </modules>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <dependency.version.annotations>23.0.0</dependency.version.annotations>
        <dependency.version.jcalculator>1.8</dependency.version.jcalculator>
        <dependency.version.maven-compiler>3.8.1</dependency.version.maven-compiler>
        <dependency.version.maven-shade>3.2.4</dependency.version.maven-shade>
        <dependency.version.surefire>3.0.0-M5</dependency.version.surefire>
        <dependency.version.bytebuddy>1.12.10</dependency.version.bytebuddy>
        <dependency.version.asm>9.3</dependency.version.asm>
        <dependency.version.mockito>4.5.1</dependency.version.mockito>
        <dependency.version.junit>5.8.2</dependency.version.junit>
        <dependency.version.xseries>8.8.0</dependency.version.xseries>
    </properties>

    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>

        <!-- Spigot -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.github.cryptomorin</groupId>
                <artifactId>XSeries</artifactId>
                <version>${dependency.version.xseries}</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>3.0.2</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>${dependency.version.annotations}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
